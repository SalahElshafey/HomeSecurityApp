<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="Home Security Features"
        app:titleTextColor="@android:color/white" />

    <!-- Coffee Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_coffee"
        style="@style/CardViewStyle">

        <LinearLayout
            style="@style/CardContentStyle">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_coffee"
                android:contentDescription="Coffee Logo" />

            <TextView
                style="@style/CardTextStyle"
                android:text="Coffee Machine" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Lighting Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_lighting"
        style="@style/CardViewStyle">

        <LinearLayout
            style="@style/CardContentStyle">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_light"
                android:contentDescription="Lighting Logo" />

            <TextView
                style="@style/CardTextStyle"
                android:text="Lighting Control" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Thermostat Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_thermostat"
        style="@style/CardViewStyle">

        <LinearLayout
            style="@style/CardContentStyle">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_thermostate"
                android:contentDescription="Thermostat Logo" />

            <TextView
                style="@style/CardTextStyle"
                android:text="Thermostat" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Music Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_music"
        style="@style/CardViewStyle">

        <LinearLayout
            style="@style/CardContentStyle">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_music"
                android:contentDescription="Music Logo" />

            <TextView
                style="@style/CardTextStyle"
                android:text="Music Control" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_gray" />
</LinearLayout>
